<Window x:Class="QuestServer.SendMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сообщение" Height="201" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterOwner" HorizontalAlignment="Center" VerticalAlignment="Center" >
    <Grid>
        <Label Content="Сообщение:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="Msg" HorizontalAlignment="Left" Height="86" Margin="10,36,0,0" TextWrapping="Wrap" AcceptsReturn="True" MaxLength="500" MaxLines="5" VerticalAlignment="Top" Width="272"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="207,137,0,0" VerticalAlignment="Top" Width="75" Click="OnCloseClick"/>
        <Button Content="Отправить" HorizontalAlignment="Left" Margin="127,137,0,0" VerticalAlignment="Top" Width="75" Click="OnSendMessageClick"/>
    </Grid>
</Window>
