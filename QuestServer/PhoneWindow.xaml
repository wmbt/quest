<Window x:Class="QuestServer.PhoneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Входящий вызов" Height="295" Width="270" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterOwner" HorizontalAlignment="Center" VerticalAlignment="Center">
    <StackPanel>
        <Image Width="150" Height="150" Margin="0,20" Source="Media/phone2.png" />
        <Label x:Name="CallerId" Content="Комната" Margin="10,0" HorizontalAlignment="Center" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="AcceptButton" Content="Принять" Height="24" Width="90" Click="AcceptButtonOnClick" Margin="0,0,5,0"/>
            <Button x:Name="DropButton" Content="Отклонить" Height="24" Width="90" Click="RejectButtonOnClick" Margin="5,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
