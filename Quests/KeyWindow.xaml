<Window x:Class="QuestClient.KeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Решение" BorderThickness="1"
        WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Topmost="True" ShowInTaskbar="False" 
        HorizontalAlignment="Center" VerticalAlignment="Center" Width="550" Height="660" Background="White">

    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10,0">
        <Label Content="Описание" x:Name="Description" HorizontalAlignment="Left" Margin="0,10,0,5"/>
        <Image x:Name="KeyImage" HorizontalAlignment="Left" Height="500"  Width="500" VerticalAlignment="Top" Margin="0,0,0,15"/>
        <Button Content="Закрыть" HorizontalAlignment="Center" Click="CloseOnClick" Width="90" Height="40"/>
    </StackPanel>

</Window>
