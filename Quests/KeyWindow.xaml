<Window x:Class="QuestClient.KeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Решение" BorderThickness="1"
        WindowStyle="ToolWindow" ResizeMode="NoResize" WindowState="Maximized" WindowStartupLocation="CenterOwner" Topmost="True" ShowInTaskbar="False" 
        HorizontalAlignment="Center" VerticalAlignment="Center" Width="1200" Height="700" Background="White">

    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10,0">
        <Label Content="Описание" x:Name="Description" HorizontalAlignment="Left" Margin="0,10,0,5"/>
        <Image x:Name="KeyImage" HorizontalAlignment="Left" Height="580"  Width="1150" VerticalAlignment="Top" Margin="0,0,0,15" Stretch="Uniform"/>
        <Button Content="Закрыть" HorizontalAlignment="Center" Click="CloseOnClick" Width="150" Height="55" Margin="0,20,0,0" FontSize="22"/>
    </StackPanel>

</Window>
