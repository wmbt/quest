<Window x:Class="QuestClient.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сообщение от оператора" BorderThickness="1"
        WindowStyle="ToolWindow" ResizeMode="NoResize" WindowState="Maximized" WindowStartupLocation="CenterOwner" Topmost="True" ShowInTaskbar="False" 
        HorizontalAlignment="Center" VerticalAlignment="Center" Width="1200" Height="700" Background="White">

    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10,0">
        <Border BorderBrush="{x:Null}" Height="620" Width="1100">
            <TextBlock Name="MessageText" TextWrapping="WrapWithOverflow" Text="Test" HorizontalAlignment="Center" FontSize="72" TextAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        
        <Button Content="Закрыть" HorizontalAlignment="Center" Click="CloseOnClick" Width="150" Height="55" Margin="0,20,0,0" FontSize="22"/>
        

    </StackPanel>
</Window>
