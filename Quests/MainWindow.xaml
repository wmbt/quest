<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:questClient="clr-namespace:QuestClient"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="QuestClient.MainWindow"
        Title="Квест" 
        WindowStyle="ThreeDBorderWindow" 
        WindowState="Maximized"
        ResizeMode="NoResize" Topmost="True" Margin="0" Height="750" MinHeight="750" Background="White" Width="1200" MinWidth="1200">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,80,0,0" HorizontalAlignment="Center">
            <Button IsEnabled="False" x:Name="KeyButton" Padding="35" Content="{StaticResource LockImage}"
                    HorizontalAlignment="Right" Margin="0,0,50,0" VerticalAlignment="Top" 
				    Width="300" Height="300" Click="KeyButtonOnClick" BorderThickness="1"/>
            <Button IsEnabled="False" x:Name="CallButton" Padding="35" Content="{StaticResource PhoneImage}"
                    HorizontalAlignment="Right" Margin="50,0,0,0" VerticalAlignment="Top" 
				    Width="300" Height="300" Click="CallButtonOnClick" BorderThickness="1"/>
        </StackPanel>
        <Label Visibility="Visible" x:Name="TotalElapsed"  Content="00:00" FontSize="72" FontWeight="Bold" Margin="0,100,0,0" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>