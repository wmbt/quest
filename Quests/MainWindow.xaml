<Window x:Class="Quests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuestServer" Height="649.5" Width="800" 
        WindowStyle="None" 
        WindowState="Normal" 
        ResizeMode="NoResize" Topmost="False" Background="SlateGray">
    <Grid HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!-- Устанавливаем три столбца -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0"  Grid.Column="0" HorizontalAlignment="Left" Height="150" Width="150" Margin="5" x:Name="Key1"/>
        <Image Grid.Row="0"  Grid.Column="1" HorizontalAlignment="Left" Height="150" Width="150" Margin="5" x:Name="Key2"/>
        <Image Grid.Row="0"  Grid.Column="2" HorizontalAlignment="Left" Height="150" Width="150" Margin="5" x:Name="Key3"/>
        <Image Grid.Row="0"  Grid.Column="3" HorizontalAlignment="Left" Height="150" Width="150" Margin="5" x:Name="Key4"/>
        <Image Grid.Row="1"  Grid.Column="0" HorizontalAlignment="Left" Height="150" Width="150" Margin="5" x:Name="Key5"/>
        <Image Grid.Row="1"  Grid.Column="1" HorizontalAlignment="Left" Height="150" Width="150" Margin="5" x:Name="Key6"/>
        <Image Grid.Row="1"  Grid.Column="2" HorizontalAlignment="Left" Height="150" Width="150" Margin="5" x:Name="Key7"/>
        <Image Grid.Row="1"  Grid.Column="3" HorizontalAlignment="Left" Height="150" Width="150" Margin="5" x:Name="Key8"/>
        <Image Grid.Row="2"  Grid.Column="0" HorizontalAlignment="Left" Height="150" Width="150" Margin="5" x:Name="Key9"/>
        <Image Grid.Row="2"  Grid.Column="1" HorizontalAlignment="Left" Height="150" Width="150" Margin="5" x:Name="Key10"/>
    </Grid>
</Window>
